@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewBag.State = "Don't Have An Account";
    ViewBag.StateUrl = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="signup-form">
    <h2 class="form-title">Sign In</h2>
    <div asp-validation-summary="All"></div>
    <form class="register-form" id="register-form" asp-action="Login">
        <div class="form-group">
            <label for="Email"><i class="zmdi zmdi-email"></i></label>
            <input asp-for="Email" placeholder="Your Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="Password"><i class="zmdi zmdi-lock"></i></label>
            <input asp-for="Password" placeholder="Your Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="RememberMe" class="agree-term" />
            <label asp-for="RememberMe" class="label-agree-term"><span><span></span></span>RememberMe</label>
            <span class="text-danger" asp-validation-for="RememberMe"></span>
        </div>            
        <span><a asp-action="ForgetPassword" style="text-decoration:none; color:black">Forget Password!</a></span>
        <div class="form-group form-button">
            <input type="submit" class="form-submit" value="Sign In" />
        </div>
    </form>
</div>

@section Scripts {
    <Partial name="_ValidationScriptsPartial"></Partial>
}
