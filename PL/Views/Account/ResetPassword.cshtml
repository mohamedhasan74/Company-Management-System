@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="signup-form">
	<h2 class="form-title">Reset Password</h2>
    <form class="register-form" id="register-form" asp-action="ResetPassword">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label for="NewPassword"><i class="zmdi zmdi-lock"></i></label>
            <input asp-for="NewPassword" placeholder="Your NewPassword" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
            <input asp-for="ConfirmPassword" placeholder="Your ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group form-button">
            <input type="submit" class="form-submit" value="Reset Password" />
        </div>
    </form>
</div>

@section Scripts {
    <Partial name="_ValidationScriptsPartial"></Partial>
}


