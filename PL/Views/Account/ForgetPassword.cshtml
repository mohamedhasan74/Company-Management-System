@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    ViewBag.State = "I'm Already Memeber";
    ViewBag.StateUrl = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="signup-form">
    <h3 class="form-title">Forget Password</h3>
    <div asp-validation-summary="All"></div>
    <form class="register-form" id="register-form" asp-action="SendEmail">
        <div class="form-group">
            <label for="Email"><i class="zmdi zmdi-email"></i></label>
            <input asp-for="Email" placeholder="Your Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group form-button">
            <input type="submit" class="form-submit" value="Send Email" />
        </div>
    </form>
</div>

@section Scripts {
    <Partial name="_ValidationScriptsPartial"></Partial>
}


