@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    ViewBag.State = "I'm Already Memeber";
    ViewBag.StateUrl = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="signup-form">
    <h2 class="form-title">Sign up</h2>
    <div asp-validation-summary="All"></div>
    <form class="register-form" id="register-form" asp-action="SignUp">
        <div class="form-group">
            <label for="FirstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input asp-for="FirstName" placeholder="Your FName" />
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label for="LastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input asp-for="LastName" placeholder="Your LName" />
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label for="UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input asp-for="UserName" placeholder="Your UserName" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label for="Email"><i class="zmdi zmdi-email"></i></label>
            <input asp-for="Email" placeholder="Your Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="Password"><i class="zmdi zmdi-lock"></i></label>
            <input asp-for="Password" placeholder="Your Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
            <input asp-for="ConfirmPassword" placeholder="Confirm your password" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <input asp-for="IsAgree" class="agree-term" />
            <label for="IsAgree" class="label-agree-term"><span><span></span></span>I agree all statements in  <a class="term-service">Terms of service</a></label>
            <span class="text-danger" asp-validation-for="IsAgree"></span>
        </div>
        <div class="form-group form-button">
            <input type="submit" class="form-submit" value="Register" />
        </div>
    </form>
</div>

@section Scripts {
    <Partial name="_ValidationScriptsPartial"></Partial>
}