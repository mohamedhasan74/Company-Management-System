@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>
<a class="btn btn-primary" asp-action="Create">Add New User</a>
@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.Id)</th>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.UserName)</th>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.FirstName)</th>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.LastName)</th>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.Email)</th>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                    <th class="fs-12">@Html.DisplayNameFor(U => U.Roles)</th>
                    <th class="fs-12">Details</th>
                    <th class="fs-12">pdate</th>
                    <th class="fs-12">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="fs-12">@user.Id</td>
                        <td class="fs-12">@user.UserName</td>
                        <td class="fs-12">@user.FirstName</td>
                        <td class="fs-12">@user.LastName</td>
                        <td class="fs-12">@user.Email</td>
                        <td class="fs-12">@user.PhoneNumber</td>
                        <td class="fs-12">@string.Join(",",user.Roles)</td>
                        <td class="fs-12"><a class="btn btn-warning" asp-action="Details" asp-route-id="@user.Id">Details</a></td>
                        <td class="fs-12"><a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">Update</a></td>
                        <td class="fs-12"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
else
{
    <div class="alert alert-info mt-3">There Is No Users</div>
}



