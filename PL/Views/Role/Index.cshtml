@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Roles</h1>
<a class="btn btn-primary" asp-action="Create">Add New Role</a>
@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="fs-12">@Html.DisplayNameFor(R => R.Id)</th>
                    <th class="fs-12">@Html.DisplayNameFor(R => R.Name)</th>
                    <th class="fs-12">Add Or Remove Users</th>
                    <th class="fs-12">Details</th>
                    <th class="fs-12">pdate</th>
                    <th class="fs-12">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td class="fs-12">@role.Id</td>
                        <td class="fs-12">@role.Name</td>
                        <td class="fs-12"><a class="btn btn-info" asp-action="AddOrRemoveUsersInRole" asp-route-roleId="@role.Id">Add Or Remove Users</a></td>
                        <td class="fs-12"><a class="btn btn-warning" asp-action="Details" asp-route-id="@role.Id">Details</a></td>
                        <td class="fs-12"><a class="btn btn-success" asp-action="Edit" asp-route-id="@role.Id">Update</a></td>
                        <td class="fs-12"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
else
{
    <div class="alert alert-info mt-3">There Is No Roles</div>
}



