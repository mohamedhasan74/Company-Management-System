@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>
<a class="btn btn-primary" asp-action="Create">Add New Employee</a>
@if(Model.Count() > 0)
{
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.Name)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.Age)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.Address)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.Department)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.Salary)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.IsActive)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.Email)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                    <th class="fs-12">@Html.DisplayNameFor(E => E.HireDate)</th>
                    <th class="fs-12">etails</th>
                    <th class="fs-12">pdate</th>
                    <th class="fs-12">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td class="fs-12">@employee.Name</td>
                        <td class="fs-12">@employee.Age</td>
                        <td class="fs-12">@employee.Address</td>
                        <td class="fs-12">@employee.Department.Name</td>
                        <td class="fs-12">@Html.DisplayFor(M => employee.Salary)</td>
                        <td class="fs-12">@Html.DisplayFor(M => employee.IsActive)</td>
                        <td class="fs-12">@Html.DisplayFor(M => employee.Email)</td>
                        <td class="fs-12">@employee.PhoneNumber</td>
                        <td class="fs-12">@employee.HireDate</td>
                        <td class="fs-12"><a class="btn btn-warning" asp-action="Details" asp-route-id="@employee.Id">Details</a></td>
                        <td class="fs-12"><a class="btn btn-success" asp-action="Edit" asp-route-id="@employee.Id">Update</a></td>
                        <td class="fs-12"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
else
{
    <div class="alert alert-info mt-3">There Is No Employee</div>
}

