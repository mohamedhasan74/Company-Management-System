@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
    @inject IUnitOfWork unitOfWork;
    var departments = new SelectList(unitOfWork.DepartmentRepository.GetAll(), "Id", "Name");
}

<h1>Add Employee</h1>
<form asp-action="Create" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
        <div class="mb-3">
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-select" asp-for="DepartmentId" asp-items="@departments">
            <option value="@null">-- Select Department --</option>
        </select>
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsActive">
        <label class="form-check-label" asp-for="IsActive"></label>
        <span class="text-danger" asp-validation-for="IsActive"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input class="form-control" asp-for="HireDate" />
        <span class="text-danger" asp-validation-for="HireDate"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="ImageFile"></label>
        <input class="form-control" asp-for="ImageFile" />
        <span class="text-danger" asp-validation-for="ImageFile"></span>
    </div>
    <button class="btn btn-primary">Add</button> |
    <a class="btn btn-light" asp-action="Index">Back To List</a>
</form>

